{
	"author": {
		"email": "jonah@jonah.pw",
		"name": "Jonah Snider",
		"url": "https://jonah.pw"
	},
	"bugs": {
		"url": "https://github.com/pizzafox/renovate-config/issues"
	},
	"devDependencies": {
		"prettier": "2.2.1",
		"semantic-release": "17.3.9"
	},
	"license": "Apache-2.0",
	"name": "@pizzafox/renovate-config",
	"renovate-config": {
		"default": {
			"$schema": "https://docs.renovatebot.com/renovate-schema.json",
			"extends": [
				"config:base",
				":semanticCommitTypeAll(build)",
				":disableRateLimiting",
				":automergePatch"
			],
			"labels": [
				"dependencies"
			],
			"semanticCommits": true,
			"packageRules": [
				{
					"groupName": "prisma",
					"matchPackagePatterns": [
						"^@prisma/",
						"^prisma$"
					]
				},
				{
					"groupName": "typescript-xo",
					"matchPackagePatterns": [
						"^xo$",
						"^typescript$",
						"^eslint-plugin-prettier$",
            "^eslint-config-xo(space|react|typescript|flow)?$"
					]
				}
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pizzafox/renovate-config.git"
	},
	"scripts": {
		"style": "prettier --check ."
	},
	"version": "0.0.0-development"
}
