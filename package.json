{
	"name": "@jonahsnider/renovate-config",
	"version": "0.0.0-development",
	"bugs": {
		"url": "https://github.com/jonahsnider/renovate-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jonahsnider/renovate-config.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonahsnider.com",
		"url": "https://jonahsnider.com"
	},
	"scripts": {
		"style": "prettier --check ."
	},
	"prettier": "@jonahsnider/prettier-config",
	"devDependencies": {
		"@jonahsnider/prettier-config": "1.1.1",
		"prettier": "2.6.2",
		"semantic-release": "19.0.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "yarn@3.2.1",
	"renovate-config": {
		"default": {
			"$schema": "https://docs.renovatebot.com/renovate-schema.json",
			"extends": [
				"config:base",
				":semanticCommitTypeAll(build)",
				":disableRateLimiting",
				":automergeMinor",
				":automergeBranch",
				"schedule:daily"
			],
			"labels": [
				"dependencies"
			],
			"semanticCommits": true,
			"packageRules": [
				{
					"groupName": "prisma",
					"matchPackagePatterns": [
						"^@prisma/",
						"^prisma$"
					]
				},
				{
					"groupName": "size-limit",
					"matchPackagePatterns": [
						"^@size-limit/",
						"^size-limit$"
					]
				},
				{
					"groupName": "typescript-xo",
					"matchPackagePatterns": [
						"^xo$",
						"^typescript$",
						"^prettier$",
						"^eslint-plugin-prettier$",
						"^eslint-config-xo(-(space|react|typescript|flow))?$",
						"^prettier-config-xo$",
						"^@jonahsnider/(xo|prettier)-config$"
					]
				},
				{
					"groupName": "ts-jest",
					"matchPackagePatterns": [
						"(ts\\-)?jest"
					]
				},
				{
					"groupName": "fontawesome",
					"packagePatterns": [
						"^@fortawesome/"
					]
				},
				{
					"groupName": "nestjs",
					"packagePatterns": [
						"^@nestjs/"
					]
				}
			]
		}
	}
}
